@model List<OrderApprovalSystem.ViewModels.EmployeeDirectoryViewModel>

@{
    ViewData["Title"] = "Employee Directory";
}

<h1><i class="bi bi-people me-2"></i>Employee Directory</h1>
<p class="text-muted">Organization employee listing</p>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Department</th>
                        <th>Manager</th>
                        <th>Hire Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@employee.EmployeeID">
                                    <strong>@employee.FullName</strong>
                                </a>
                            </td>
                            <td><a href="mailto:@employee.Email">@employee.Email</a></td>
                            <td>@(employee.Phone ?? "-")</td>
                            <td><span class="badge bg-secondary">@employee.DepartmentName</span></td>
                            <td>@(employee.ManagerName ?? "-")</td>
                            <td>@employee.StartDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
