@model List<OrderApprovalSystem.Models.Partner>

@{
    ViewData["Title"] = "Partners";
}

<h1><i class="bi bi-building me-2"></i>Partners</h1>
<p class="text-muted">Customer/Partner directory</p>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Partner Name</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var partner in Model)
                    {
                        <tr>
                            <td><strong>@partner.PartnerName</strong></td>
                            <td>@(partner.Phone ?? "-")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@partner.PartnerID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
