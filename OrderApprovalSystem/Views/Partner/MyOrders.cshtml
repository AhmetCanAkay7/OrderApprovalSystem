@model List<OrderApprovalSystem.ViewModels.DashboardViewModel>
@{
    ViewData["Title"] = "My Orders";
    var partnerName = ViewBag.PartnerName as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-list-ul me-2"></i>My Orders</h2>
        <p class="text-muted mb-0">@partnerName - All order history</p>
    </div>
    <div>
        <a href="@Url.Action("Dashboard", "Partner")" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
        <a href="@Url.Action("CreateOrder", "Partner")" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>New Order
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Order #</th>
                            <th>Created</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th>Approval Step</th>
                            <th>Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.OrderID</strong></td>
                                <td>@order.CreationTime.ToString("dd MMM yyyy, HH:mm")</td>
                                <td><strong>€@order.TotalPrice.ToString("N2")</strong></td>
                                <td>
                                    @if (order.Status == 0)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split me-1"></i>Pending</span>
                                    }
                                </td>
                                <td>@order.CurrentStepText</td>
                                <td style="width: 150px;">
                                    @{
                                        var progress = order.Status == 0 ? 100 : (order.CurrentStepValue * 33);
                                        var progressClass = order.Status == 0 ? "bg-success" : "bg-primary";
                                    }
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar @progressClass" style="width: @progress%"></div>
                                    </div>
                                    <small class="text-muted">@progress%</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-4 text-muted"></i>
                <p class="mt-3 text-muted">No orders found.</p>
                <a href="@Url.Action("CreateOrder", "Partner")" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Create Your First Order
                </a>
            </div>
        }
    </div>
</div>

<!-- Summary -->
@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h4>@Model.Count</h4>
                    <p class="mb-0 text-muted">Total Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h4>€@Model.Sum(o => o.TotalPrice).ToString("N2")</h4>
                    <p class="mb-0 text-muted">Total Value</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h4>@Model.Count(o => o.Status == 0)</h4>
                    <p class="mb-0 text-muted">Completed Orders</p>
                </div>
            </div>
        </div>
    </div>
}
