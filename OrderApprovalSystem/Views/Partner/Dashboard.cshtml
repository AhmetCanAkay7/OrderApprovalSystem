@model OrderApprovalSystem.ViewModels.PartnerDashboardViewModel
@{
    ViewData["Title"] = "Partner Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="bg-primary text-white rounded p-4 shadow">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="bi bi-building me-2"></i>Welcome, @Model.Partner.PartnerName!</h2>
                    <p class="mb-0 opacity-75">Partner Dashboard - Manage your orders with Siemens</p>
                </div>
                <div>
                    <a href="@Url.Action("CreateOrder", "Partner")" class="btn btn-light btn-lg">
                        <i class="bi bi-plus-circle me-1"></i>New Order
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="display-4 text-primary mb-2">@Model.TotalOrders</div>
                <p class="text-muted mb-0"><i class="bi bi-cart3 me-1"></i>Total Orders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="display-4 text-warning mb-2">@Model.PendingOrders</div>
                <p class="text-muted mb-0"><i class="bi bi-clock me-1"></i>Pending</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="display-4 text-success mb-2">@Model.CompletedOrders</div>
                <p class="text-muted mb-0"><i class="bi bi-check-circle me-1"></i>Completed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="display-4 text-info mb-2">€@Model.TotalSpent.ToString("N0")</div>
                <p class="text-muted mb-0"><i class="bi bi-currency-euro me-1"></i>Total Value</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a href="@Url.Action("CreateOrder", "Partner")" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-plus-circle fs-4 d-block mb-2"></i>
                            Create New Order
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("MyOrders", "Partner")" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-list-ul fs-4 d-block mb-2"></i>
                            View All Orders
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger w-100 py-3">
                            <i class="bi bi-box-arrow-right fs-4 d-block mb-2"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Orders</h5>
                <a href="@Url.Action("MyOrders", "Partner")" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Current Step</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.OrderID</strong></td>
                                        <td>@order.CreationTime.ToString("dd MMM yyyy")</td>
                                        <td>€@order.TotalPrice.ToString("N2")</td>
                                        <td>
                                            @if (order.Status == 0)
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@order.CurrentStepText</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="mt-3 text-muted">No orders yet. Create your first order!</p>
                        <a href="@Url.Action("CreateOrder", "Partner")" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Create Order
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
