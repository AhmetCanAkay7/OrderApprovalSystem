@model OrderApprovalSystem.Models.Partner

@{
    ViewData["Title"] = Model.PartnerName;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building me-2"></i>@Model.PartnerName</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Partners
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Partner Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Partner ID:</dt>
                    <dd class="col-sm-8">@Model.PartnerID</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.PartnerName</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">@(Model.Phone ?? "N/A")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
