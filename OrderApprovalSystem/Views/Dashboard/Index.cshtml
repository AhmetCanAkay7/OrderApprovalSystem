@model List<OrderApprovalSystem.ViewModels.DashboardViewModel>
@{
    ViewData["Title"] = "Dashboard";
    var summary = ViewBag.Summary as OrderApprovalSystem.DataAccess.DashboardSummary;
}

<h1><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>
<p class="text-muted">Order Approval System Overview</p>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4 col-lg-2 mb-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body text-center">
                <i class="bi bi-hourglass-split fs-1"></i>
                <h2 class="mb-0">@(summary?.PendingOrders ?? 0)</h2>
                <small>Pending Orders</small>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg-2 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-check-circle fs-1"></i>
                <h2 class="mb-0">@(summary?.CompletedOrders ?? 0)</h2>
                <small>Completed</small>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg-2 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-currency-dollar fs-1"></i>
                <h2 class="mb-0">@((summary?.TotalRevenue ?? 0).ToString("N0"))</h2>
                <small>Revenue</small>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg-2 mb-3">
        <div class="card bg-info text-dark h-100">
            <div class="card-body text-center">
                <i class="bi bi-box-seam fs-1"></i>
                <h2 class="mb-0">@(summary?.TotalProducts ?? 0)</h2>
                <small>Products</small>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg-2 mb-3">
        <div class="card bg-secondary text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-building fs-1"></i>
                <h2 class="mb-0">@(summary?.TotalPartners ?? 0)</h2>
                <small>Partners</small>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-lightning-charge me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Order" asp-action="Create" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle me-1"></i>Create Order
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Order" asp-action="PendingApprovals" class="btn btn-warning w-100">
                            <i class="bi bi-clock me-1"></i>My Pending Approvals
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Product" asp-action="Inventory" class="btn btn-info w-100">
                            <i class="bi bi-boxes me-1"></i>View Inventory
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Partner" asp-action="SalesPerformance" class="btn btn-success w-100">
                            <i class="bi bi-graph-up me-1"></i>Sales Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Orders</h5>
        <a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>Partner</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.OrderID</strong></td>
                            <td>@order.PartnerName</td>
                            <td>@order.CreationTime.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">@order.TotalPrice.ToString("C")</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case 0:
                                        <span class="badge bg-success">@order.StatusText</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-warning text-dark">@order.StatusText</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-danger">@order.StatusText</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
