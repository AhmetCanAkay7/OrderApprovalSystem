@model OrderApprovalSystem.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = $"Order #{Model.Order.OrderID}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-file-earmark-text me-2"></i>Order #@Model.Order.OrderID</h2>
        <p class="text-muted mb-0">Review order details before approval</p>
    </div>
    <a href="@Url.Action("Dashboard", "EmployeePanel")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <!-- Order Header -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Order Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="text-muted">Partner</td>
                                <td><strong>@Model.Order.PartnerName</strong></td>
                            </tr>
                            <tr>
                                <td class="text-muted">Ordered By</td>
                                <td>@Model.Order.OrdererName @Model.Order.OrdererSurname</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Created</td>
                                <td>@Model.Order.CreationTime.ToString("dd MMM yyyy, HH:mm")</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="text-muted">Payment Term</td>
                                <td>@(Model.Order.PaymentTerm ?? "N/A")</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Currency</td>
                                <td>@(Model.Order.Currency ?? "EUR")</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Status</td>
                                <td>
                                    @if (Model.Order.Status == 0)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending Approval</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Order.OrderNote))
                {
                    <div class="alert alert-light mt-2">
                        <strong>Notes:</strong> @Model.Order.OrderNote
                    </div>
                }
            </div>
        </div>

        <!-- Order Items -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Order Items</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Code</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td><strong>@item.ProductName</strong></td>
                                    <td><code>@item.ProductCode</code></td>
                                    <td class="text-end">€@item.OrderItemPrice.ToString("N2")</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end"><strong>€@((item.OrderItemPrice * item.Quantity).ToString("N2"))</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end"><strong>€@Model.OrderItems.Sum(i => i.OrderItemPrice * i.Quantity).ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Approval Status -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>Approval Progress</h5>
            </div>
            <div class="card-body">
                @{
                    var steps = new[] { "Commercial", "Technical", "Paraf" };
                }
                @for (int i = 0; i < steps.Length; i++)
                {
                    var isComplete = Model.Order.CurrentStepValue > i;
                    var isCurrent = Model.Order.CurrentStepValue == i && Model.Order.Status == 1;
                    var stepClass = isComplete ? "bg-success text-white" : (isCurrent ? "bg-warning" : "bg-light");
                    var iconClass = isComplete ? "bi-check-circle-fill" : (isCurrent ? "bi-hourglass-split" : "bi-circle");
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle @stepClass p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi @iconClass"></i>
                        </div>
                        <div>
                            <strong>Step @i: @steps[i]</strong>
                            @if (isComplete)
                            {
                                <br><small class="text-success">Approved</small>
                            }
                            else if (isCurrent)
                            {
                                <br><small class="text-warning">Awaiting Approval</small>
                            }
                            else
                            {
                                <br><small class="text-muted">Pending</small>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Approval Action -->
        @if (Model.CanUserApprove)
        {
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-check2-square me-2"></i>Your Action Required</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong>Role:</strong> @Model.CurrentUserRole<br>
                        You are authorized to approve this order at the current step.
                    </p>
                    <form asp-controller="EmployeePanel" asp-action="Approve" method="post">
                        <input type="hidden" name="OrderID" value="@Model.Order.OrderID" />
                        <input type="hidden" name="IsApproved" value="true" id="approvalValue" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" onclick="document.getElementById('approvalValue').value='true';">
                                <i class="bi bi-check-circle me-1"></i>Approve Order
                            </button>
                            <button type="submit" class="btn btn-outline-danger" onclick="document.getElementById('approvalValue').value='false';">
                                <i class="bi bi-x-circle me-1"></i>Decline
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-body text-center text-muted">
                    <i class="bi bi-lock display-4"></i>
                    <p class="mt-2 mb-0">
                        @if (Model.Order.Status == 0)
                        {
                            <text>This order has been completed.</text>
                        }
                        else
                        {
                            <text>You cannot approve this order at the current step.</text>
                        }
                    </p>
                </div>
            </div>
        }

        <!-- Assigned Approvers -->
        @if (Model.Approvers.Any())
        {
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-people me-2"></i>Assigned Approvers</h6>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var approver in Model.Approvers)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @approver.EmployeeName
                            <span class="badge bg-secondary">@approver.RoleName</span>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
