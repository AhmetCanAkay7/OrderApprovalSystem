@model List<OrderApprovalSystem.ViewModels.PendingApprovalViewModel>
@{
    ViewData["Title"] = "Approval Dashboard";
    var employee = ViewBag.Employee as OrderApprovalSystem.Models.Employee;
    var roleName = ViewBag.RoleName as string;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="bg-success text-white rounded p-4 shadow">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="bi bi-person-check me-2"></i>Welcome, @employee?.FullName!</h2>
                    <p class="mb-0 opacity-75">
                        <i class="bi bi-shield-check me-1"></i>
                        Approval Role: <strong>@roleName</strong> | 
                        Department: @employee?.DepartmentName
                    </p>
                </div>
                <div>
                    <span class="badge bg-light text-success fs-5">
                        @Model.Count Pending
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Role Info Card -->
<div class="card border-info mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-auto">
                <i class="bi bi-info-circle text-info fs-2"></i>
            </div>
            <div class="col">
                <h6 class="mb-1">Your Approval Responsibility</h6>
                <p class="mb-0 text-muted">
                    @switch (roleName)
                    {
                        case "Commercial Approve":
                            <text>You review orders at <strong>Step 0 (Commercial Approval)</strong>. Check pricing, terms, and commercial viability.</text>
                            break;
                        case "Technical Approve":
                            <text>You review orders at <strong>Step 1 (Technical Approval)</strong>. Verify technical specifications and feasibility.</text>
                            break;
                        case "Paraf Approve":
                            <text>You provide <strong>Step 2 (Final Signature)</strong>. This is the final authorization before order completion.</text>
                            break;
                        default:
                            <text>Review and approve orders assigned to you.</text>
                            break;
                    }
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Pending Approvals Table -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="bi bi-clock me-2"></i>Pending Approvals</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order #</th>
                            <th>Partner</th>
                            <th>Ordered By</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Your Role</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.OrderID</strong></td>
                                <td>
                                    <i class="bi bi-building me-1"></i>@order.PartnerName
                                </td>
                                <td>@order.OrdererFullName</td>
                                <td>@order.CreationTime.ToString("dd MMM yyyy")</td>
                                <td><strong>€@order.TotalPrice.ToString("N2")</strong></td>
                                <td>
                                    <span class="badge bg-info">@order.RoleName</span>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("OrderDetails", "EmployeePanel", new { id = order.OrderID })" 
                                       class="btn btn-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-check-circle display-1 text-success"></i>
                <h4 class="mt-3">All Caught Up!</h4>
                <p class="text-muted">You have no pending approvals at the moment.</p>
            </div>
        }
    </div>
</div>

<!-- Quick Stats -->
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-light text-center">
            <div class="card-body">
                <h3 class="text-primary">@Model.Count</h3>
                <p class="mb-0">Awaiting Your Approval</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light text-center">
            <div class="card-body">
                <h3 class="text-success">€@Model.Sum(o => o.TotalPrice).ToString("N0")</h3>
                <p class="mb-0">Total Value Pending</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light text-center">
            <div class="card-body">
                <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger">
                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                </a>
            </div>
        </div>
    </div>
</div>
