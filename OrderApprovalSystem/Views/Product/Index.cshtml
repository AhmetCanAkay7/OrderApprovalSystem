@model List<OrderApprovalSystem.Models.Product>

@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<OrderApprovalSystem.Models.Category>;
}

<h1><i class="bi bi-box-seam me-2"></i>Products</h1>
<p class="text-muted">Product catalog</p>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Product Name</th>
                        <th>SKU</th>
                        <th>Category</th>
                        <th class="text-end">Unit Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><strong>@product.ProductName</strong></td>
                            <td><code>@(product.ProductCode ?? "N/A")</code></td>
                            <td><span class="badge bg-secondary">@product.CategoryName</span></td>
                            <td class="text-end text-success">@product.Price.ToString("C")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
