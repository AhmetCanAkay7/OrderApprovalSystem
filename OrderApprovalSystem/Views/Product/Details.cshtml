@model OrderApprovalSystem.Models.Product

@{
    ViewData["Title"] = Model.ProductName;
    var stocks = ViewBag.Stock as List<OrderApprovalSystem.Models.Stock>;
    var totalStock = (int)ViewBag.TotalStock;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-box me-2"></i>@Model.ProductName</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Products
    </a>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Product Details</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Product ID:</dt>
                    <dd class="col-sm-8">@Model.ProductID</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.ProductName</dd>

                    <dt class="col-sm-4">Product Code:</dt>
                    <dd class="col-sm-8"><code>@(Model.ProductCode ?? "N/A")</code></dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8"><span class="badge bg-info text-dark">@Model.CategoryName</span></dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8"><strong class="text-success fs-5">@Model.Price.ToString("C")</strong></dd>

                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "No description available.")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-boxes me-2"></i>Stock Levels</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <strong>Total Stock:</strong> @totalStock units across all warehouses
                </div>

                @if (stocks != null && stocks.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Warehouse</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stock in stocks)
                            {
                                <tr>
                                    <td>@stock.WarehouseName</td>
                                    <td class="text-end">@stock.Quantity</td>
                                    <td class="text-end">@stock.TotalValue.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted text-center">No stock available.</p>
                }
            </div>
        </div>
    </div>
</div>
