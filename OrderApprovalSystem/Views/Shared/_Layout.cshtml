<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Order Approval System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrderApprovalSystem.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var userType = Context.Session.GetString("UserType");
        var isPartner = userType == "Partner";
        var isEmployee = userType == "Employee";
        var hasApprovalRole = Context.Session.GetString("HasApprovalRole") == "true";
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                @if (isPartner)
                {
                    <a class="navbar-brand" asp-controller="Partner" asp-action="Dashboard">
                        <i class="bi bi-building me-2"></i>Partner Portal
                    </a>
                }
                else if (isEmployee)
                {
                    <a class="navbar-brand" asp-controller="EmployeePanel" asp-action="@(hasApprovalRole ? "Dashboard" : "Welcome")">
                        <i class="bi bi-clipboard-check me-2"></i>Employee Portal
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-clipboard-check me-2"></i>Order Approval System
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (isPartner)
                        {
                            <!-- Partner Navigation -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Partner" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Partner" asp-action="MyOrders">
                                    <i class="bi bi-list-ul me-1"></i>My Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Partner" asp-action="CreateOrder">
                                    <i class="bi bi-plus-circle me-1"></i>New Order
                                </a>
                            </li>
                        }
                        else if (isEmployee && hasApprovalRole)
                        {
                            <!-- Employee with Approval Role Navigation -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="EmployeePanel" asp-action="Dashboard">
                                    <i class="bi bi-clock me-1"></i>Pending Approvals
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-graph-up me-1"></i>Reports
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard Overview</a></li>
                                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="PartnerSales"><i class="bi bi-bar-chart me-2"></i>Partner Sales</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Inventory"><i class="bi bi-boxes me-2"></i>Stock Valuation</a></li>
                                </ul>
                            </li>
                        }
                        else if (isEmployee && !hasApprovalRole)
                        {
                            <!-- Employee without Approval Role - with reports access -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="EmployeePanel" asp-action="Welcome">
                                    <i class="bi bi-house me-1"></i>Home
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-graph-up me-1"></i>Reports
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard Overview</a></li>
                                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="PartnerSales"><i class="bi bi-bar-chart me-2"></i>Partner Sales</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Inventory"><i class="bi bi-boxes me-2"></i>Stock Valuation</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (isPartner)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-building me-1"></i>@Context.Session.GetString("PartnerName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Partner" asp-action="Dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else if (isEmployee)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@Context.Session.GetString("EmployeeName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (hasApprovalRole)
                                    {
                                        <li>
                                            <span class="dropdown-item-text text-muted">
                                                <small><i class="bi bi-shield-check me-1"></i>@Context.Session.GetString("RoleName")</small>
                                            </span>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 mt-4">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Siemens Order Approval System
            @if (!string.IsNullOrEmpty(userType))
            {
                <span class="ms-3">|</span>
                <span class="ms-3 badge bg-secondary">@userType Mode</span>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
