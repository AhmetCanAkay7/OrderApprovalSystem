@model List<OrderApprovalSystem.ViewModels.PendingApprovalViewModel>

@{
    ViewData["Title"] = "Pending Approvals";
}

<h1><i class="bi bi-clock-history me-2"></i>Pending Approvals</h1>
<p class="text-muted">Orders waiting for your approval</p>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var approval in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-warning">
                    <div class="card-header bg-warning text-dark">
                        <strong>Order #@approval.OrderID</strong>
                        <span class="badge bg-dark float-end">@approval.RoleName</span>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Partner:</dt>
                            <dd class="col-sm-7">@approval.PartnerName</dd>

                            <dt class="col-sm-5">Date:</dt>
                            <dd class="col-sm-7">@approval.CreationTime.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-5">Amount:</dt>
                            <dd class="col-sm-7"><strong class="text-success">@approval.TotalPrice.ToString("C")</strong></dd>

                            <dt class="col-sm-5">Created By:</dt>
                            <dd class="col-sm-7">@approval.OrdererFullName</dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@approval.OrderID" class="btn btn-primary w-100">
                            <i class="bi bi-eye me-1"></i>Review & Approve
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-check-circle display-1 text-success"></i>
        <h3 class="mt-3">All caught up!</h3>
        <p class="text-muted">You have no pending approvals at this time.</p>
        <a asp-action="Index" class="btn btn-outline-primary">View All Orders</a>
    </div>
}
