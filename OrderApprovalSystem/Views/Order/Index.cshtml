@model List<OrderApprovalSystem.ViewModels.DashboardViewModel>

@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-cart3 me-2"></i>Orders</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>New Order
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>Partner</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Current Step</th>
                        <th>Created By</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.OrderID</strong></td>
                            <td>@order.PartnerName</td>
                            <td>@order.CreationTime.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">@order.TotalPrice.ToString("C")</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case 0:
                                        <span class="badge bg-success">@order.StatusText</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-warning text-dark">@order.StatusText</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-danger">@order.StatusText</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@order.StatusText</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (order.Status == 1)
                                {
                                    <span class="badge bg-info text-dark">@order.CurrentStepText</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@order.OrdererFullName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">No orders found. Create your first order!</p>
                <a asp-action="Create" class="btn btn-primary">Create Order</a>
            </div>
        }
    </div>
</div>
